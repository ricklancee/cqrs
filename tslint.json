{
    "extends": ["tslint-config-airbnb", "tslint-config-prettier"],
    "rules": {
        "semicolon": false,
        "variable-name": false,
        "indent": [true, "spaces", 4],
        "ter-indent": false,
        "ter-arrow-parens": false,
        "whitespace": false,
        "import-name": false,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ]
    }
}
